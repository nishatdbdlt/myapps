<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="rep.list">
      <field name="name">REP list</field>
      <field name="model">rep.rep</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="value"/>
          <field name="value2"/>
        </tree>
      </field>
    </record>

    <!-- actions opening views on models -->
    <record model="ir.actions.act_window" id="rep.action_window">
      <field name="name">REP window</field>
      <field name="res_model">rep.rep</field>
      <field name="view_mode">tree,form</field>
    </record>

    <!-- server action to the one above -->
    <record model="ir.actions.server" id="rep.action_server">
      <field name="name">REP server</field>
      <field name="model_id" ref="model_rep_rep"/>
      <field name="state">code</field>
      <field name="code">
        action = {
          "type": "ir.actions.act_window",
          "view_mode": "tree,form",
          "res_model": model._name,
        }
      </field>
    </record>

    <!-- Top menu item -->
    <menuitem name="REP" id="rep.menu_root"/>
    <!-- menu categories -->
    <menuitem name="Menu 1" id="rep.menu_1" parent="rep.menu_root"/>
    <menuitem name="Menu 2" id="rep.menu_2" parent="rep.menu_root"/>
    <!-- actions -->
    <menuitem name="List" id="rep.menu_1_list" parent="rep.menu_1"
              action="rep.action_window"/>
    <menuitem name="Server to list" id="rep" parent="rep.menu_2"
              action="rep.action_server"/>
  </data>
</odoo>
